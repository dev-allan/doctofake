<Window x:Class="WpfDoctolib.Views.FormulairePrincipalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDoctolib"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Views/doctofake.jpg"/>
        </Grid.Background>
        <StackPanel VerticalAlignment="Center">
            <StackPanel>
                <Button Width="150" Margin="10" Content="Gestion Médecin" Command="{Binding GestionMedecin}"></Button>
            </StackPanel>
            <StackPanel>
                <Button Width="150" Margin="10" Content="Gestion des Patients" Command="{Binding GestionPatient}"></Button>
            </StackPanel>            
            <StackPanel>
                <Button Width="150" Margin="10" Content="Gestion des Rendez-vous" Command="{Binding GestionRendezVous}"></Button>
            </StackPanel>            
            <StackPanel>
                <Button Width="150" Margin="10" Content="Afficher tout" Command="{Binding AfficherTout}" ></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
